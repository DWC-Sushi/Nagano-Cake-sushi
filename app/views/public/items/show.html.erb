<div class='container'>
  <div class='row'>
    <div class='col-md-3 mt-5'>
      <%= render 'admin/genres/genre_sidebar', genres: @genres  %>
    </div>
    <div class='col-md-9 my-5'>
      <div class='d-flex text-align'>
      <%= image_tag @item.get_image, size:"400x300"%>

      <div class="item">
        <div class="font-weight-bold">
          <h2><%= @item.name %></h2>
        </div>
        <div class="j my-4">
          <h3><%= @item.introduction %></h3>
        </div>
        <div class="align-bottom ">
          <h3>¥ <%= (@item.price*1.1).floor.to_s(:delimited) %>
              <span class="tax">(税込)</span>
          </h3>
        </div>
      </div>
      </div>

      <div class="field">

          <%= form_for(@cart_item , url: cart_items_path,method: :post) do |f| %>
             <div class="text-right mx-2">
            <% if @item.is_active == true %>

              <%= f.hidden_field :item_id, value: @item.id %>
              <%= f.select :amount, options_for_select((1..10).to_a), include_blank: "個数選択" %>
              <%= f.submit "カートに入れる", class: "glyphicon glyphicon-shopping-cart btn btn-primary" %>
            <% else %>
              <h3>売り切れ中</h3>
            <% end %>
            </div>
          <% end %>

    </div>
 </div>
</div>