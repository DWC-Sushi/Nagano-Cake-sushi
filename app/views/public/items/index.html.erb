 <div class='container px-5 px-sm-0'>
  <div class='row'>
    <div class='col-md-3'>
      <%= render 'admin/genres/genre_sidebar', genres: @genres  %>
    </div>
    <div class='col-md-8'>
      <h2 class="product-headline head-line title_h2 text-center">商品一覧
		<span>
			(全<%= @items.total_count %>件中　<%= @items.count %>件)
		</span>
		</h2>

			    	<% @items.each do |item| %>
			    	<div class="d-flex flex-wrap ">
			    	<div class="col-md-2 ">
                <%= link_to item.name,item_path(item) , class: "btn-link" %>
              <div class="img_field">
                <%= image_tag item.get_image, size:"100x100"%>
              </div>
              <p class="item-name">
                <%= item.name %>
              </p>
             <% if item.is_active == true %>
                <p>¥<%= item.price.to_s(:delimited) %></p>
             <% else %>
                <p class="soldout">売り切れ中</p>
             <% end %>
             </div>
            <% end %>
            </div>


   <%= paginate @items %>
  </div>

  </div>
  </div>