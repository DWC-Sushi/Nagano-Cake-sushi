 <div class='container px-5 px-sm-0'>
  <div class='row'>
    <div class='col-md-3'>
      <h2>genre</h2>
    </div>
    <div class='col-md-8 offset-md-1'>
      <h2 class="product-headline head-line title_h2 text-center">商品一覧
		<span>
			(全<%= @items.total_count %>件中　<%= @items.count %>件)
		</span>
		</h2>
			<div class="clearfix item-box">
				<% @items.each do |item| %>
          <%= link_to item_path(item), class: "btn-link" %>
        <div id="img_field" class="item">
          <%= image_tag item.get_image, size:"180x130"%>
          <%#= attachment_image_tag(item, :image, size: "180x130", fallback: "no_image.jpg") %>

        </div>
          <p class="item-name">
            <%= item.name %>
          </p>
       <% if item.is_active == true %>
      <p>¥<%= item.price.to_s(:delimited) %></p>
    <% elsif item.is_active == false %>
      <p class="soldout">売り切れ中</p>
    <% end %>
    <% end %>

  </div>
  </div>

  </div>
  </div>