<div class="container">
<div class="row">
	<div class="col-md-offset-1 col-md-9">
		<h2 class="head-line col-md-6 text-center title_h2 m-4">マイページ</h2>
		<strong>登録情報</strong>
			<%= link_to " 編集する", customers_information_edit_path, class: "glyphicon glyphicon-pencil btn btn-success ml-4" %>
			</p>

			<table class="table table-bordered table-condensed" >
				<tbody>
					<tr>
						<td class="info col-xs-2">氏名</td>
						<td class="text-left "><%= @customer.full_name %>	<tr>
						<td class="info">カナ</td>
						<td class="text-left"><%= @customer.full_name_kana %></td>
					</tr>
					<tr>
						<td class="info">郵便番号</td>
						<td class="text-left"><%= @customer.postal_code %></td>
					</tr>
					<tr>
						<td class="info">住所</td>
						<td class="text-left"><%= @customer.address %></td>
					</tr>
					<tr>
						<td class="info">電話番号</td>
						<td class="text-left"><%= @customer.telephone_number %></td>
					</tr>
					<tr>
						<td class="info">メールアドレス</td>
						<td class="text-left"><%= @customer.email %></td>
					</tr>
				</tbody>
			</table>
			</div>
			</div>
			<div class="row">
				<div class="col-9 ">
					<div class="form-group ">
						<div class="col-9 ">
							<strong class="col-4">配送先</strong>
							<%= link_to " 一覧を見る", addresses_path, class: "glyphicon glyphicon-folder-open btn btn-primary col-5 ml-3" %>
						</div>
						<div class="col-9 mt-3">
							<strong class="col-4 ">注文履歴</strong>
							<%= link_to " 一覧を見る", orders_path, class: "glyphicon glyphicon-folder-open btn btn-primary col-5" %>
						</p>
			</div>
			</div>
</div>
</div>