<div class= "container">
<div class="row">
  <div class="col-mx-offset-1 col-sm-11">

    <h2 class="head-line title_h2 text-center">新規会員登録</h2>

    <%= form_with(model: @customer, url: registration_path(resource_name) )do |f| %>

      <div class="field form-group col-xs-11">
        <%= f.label :"名前", class: "col-sm-2 control-label" %>
        <%= f.label :"(姓)", class: "col-sm-1 control-label" %>
        <%= f.text_field :last_name, autofocus: true, class: "col-sm-3 form-control-static name" %>
        <%= f.label :"(名)", class: "col-sm-1 control-label" %>
        <%= f.text_field :first_name, autofocus: true, class: "col-sm-3 form-control-static name" %>
      </div>

      <div class="field form-group col-xs-11">
        <%= f.label :"フリガナ", class: "col-sm-2 control-label" %>
        <%= f.label :"(セイ)", class: "col-sm-1 control-label" %>
        <%= f.text_field :last_name_kana, autofocus: true, class: "col-sm-3 form-control-static name" %>
        <%= f.label :"(メイ)", class: "col-sm-1 control-label" %>
        <%= f.text_field :first_name_kana, autofocus: true, class: "col-sm-3 form-control-static name" %>
      </div>

     　<div class="form-group col-xs-11">
        <%= f.label :"メールアドレス", class: "col-sm-3 control-label" %>
        <%= f.text_field :email, class: "col-sm-3 form-control-static"%>
       </div>

       <div class="form-group col-xs-11">
        <%= f.label :"郵便番号", autofocus: true, class: "col-sm-3 control-label" %>
        <%= f.text_field :postal_code, class: "col-sm-3 form-control-static postal_code" %>
      </div>

      <div class="form-group col-xs-11">
        <%= f.label :"住所", class: "col-sm-3 control-label" %>
        <%= f.text_field :address, autofocus: true, class: "col-sm-7 form-control-static address"  %>
      </div>

      <div class="form-group col-xs-11">
        <%= f.label :"電話番号", class: "col-sm-3 control-label" %>
        <%= f.text_field :telephone_number, class: "col-sm-3 form-control-static" %>
      </div>

      <div class="field form-group col-xs-11">
        <%= f.label :"パスワード(6文字以上)", class: "col-sm-3 control-label" %>
        <%= f.password_field :password, autocomplete: "new-password", class: "col-sm-3 form-control-static" %>
      </div>

      <div class="field form-group col-xs-11">
        <%= f.label :"パスワード(確認用)", class: "col-sm-3 control-label" %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "col-sm-3 form-control-static" %>
      </div>

      <div class="actions col-xs-11">
        <%= f.label :"  ", class: "col-sm-3 form-control-static" %>
        <%= f.submit "新規登録",class: 'btn btn-success btn-lg col-sm-3' %>
      </div>
    <% end %>

    <div class="col-xs-9">
      <h2 class="head-line title_h2 text-lrft m-4">既に登録済みの方</h2>

      <p class="new-link ml-5"><%= link_to "こちら", new_customer_session_path%>　からログインしてください。</p>
    </div>
  </div>
</div>
