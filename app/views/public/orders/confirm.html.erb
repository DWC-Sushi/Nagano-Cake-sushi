<div>
  <h4>注文情報確認</h4>
  <div>
    <div>
      <table>
        <thead>
          <tr>
            <th>商品名</th>
            <th>単価(税込)</th>
            <th>数量</th>
            <th>小計</th>
          </tr>
        </thead>
        <tbody>
          <% sum_of_price= 0 %>
          <% @cart_items.each do |cart_item| %>
          <tr>
            <td>
              <%= image_tag cart_item.item.image, size: '60x60' %>
              <%= cart_item.item.name %>
            </td>
            <td><%= (cart_item.item.price*1.10).to_i %></td>
            <td><%= cart_item.amount %></td>
            <td>
              <% subtotal = ((cart_item.item.price*cart_item.amount)*1.10).to_i %>
              <%= subtotal %>
            <% sum_of_price += subtotal %>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  <%= form_with model: @order, url: orders_path, local: true do |f| %>
    <div>
      <table>
        <tbody>
          <tr>
            <td>送料</td>
            <td>
              <%= @order.shipping_cost %>
              <%= f.hidden_field :shipping_cost, :value => @order.shipping_cost %>
            </td>
          </tr>
          <tr>
            <td>商品合計</td>
            <td><%= sum_of_price %></td>
          </tr>
          <tr>
            <td>請求金額</td>
            <td>
              <%= sum_of_price + @order.shipping_cost %>
              <%= f.hidden_field :total_payment, :value => sum_of_price + @order.shipping_cost %>
            </td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
  <div>
    <div>支払方法</div>
    <%= @order.payment_method_i18n %>
    <%= f.hidden_field :payment_method, :value => @order.payment_method %><br>
  </div>
  <div>
    <div>お届け先</div>
    〒<%= @order.postal_code %>
    <%= f.hidden_field :postal_code, :value => @order.postal_code %>
    <%= @order.address %>
    <%= f.hidden_field :address, :value => @order.address %><br>
    <%= @order.name %>
    <%= f.hidden_field :name, :value => @order.name %>
  </div>
  <div>
    <%= f.submit "注文を確定する", class: "btn btn-success" %>
  </div>
  <% end %>
</div>