<div class = "container">
<div class = "row">
  <div class="col-lg-12">
    <h2 class= "head-line text-center">配送先登録/一覧</h2>
    <div class= "error" >

    </div>
    <%= form_with model:@address_new,local: true do |f| %>
      <div class="addres col-xs-12">
        <div class="form-group col-xs-12">
          <%=f.label :"郵便番号（ハイフンなし）",class: "col-xs-6 control-label" %>
          <%=f.text_field :postal_code, class: "col-xs-5 form-control-static postal_code" %>
        </div>

        <div class="form-group col-xs-10">
          <%=f.label :"住所" ,class: "col-xs-6 control-label" %>
          <%=f.text_field :address, class: "col-xs-4 form-control-static address" %>
        </div>

        <div class="form-group col-xs-12">
          <%=f.label :"宛名",class: "col-xs-3 control-label" %>
          <%=f.text_field :name, class: "col-xs-4 form-control-static name" %>
        <%= f.submit '登録' ,class: "col-xs pull-right btn-lg btn-success" %>
      </div>
      <% end %>
  </div>

  <div class="row">
    <div class="col-sm-10 px-sm-0 mx-auto mb-5">
      <table class="table table-hover">
      <thead>
        <tr>
          <th>郵便番号</th>
          <th>住所</th>
          <th>宛名</th>
          <th colspan="2"></th>
          </tr>
      </thead>
      <% @addresses.each do |address| %>
      <tbody>
      <div class="list">
        <tr>
          <td><%= address.postal_code %></td>
          <td><%= address.address %></td>
          <td><%= address.name %></td>
          <td><%= link_to "編集する",edit_address_path(address), class: "btn btn-sm btn-danger" %></td>
          <td><%=link_to "削除する",address_path(address),method: :delete, data: { confirm: '本当に消しますか？' }, class: "btn btn-sm btn-danger"%></td>
        </tr>
      </div>
    </tbody>
     <% end %>
    </table>
</div>
</div>