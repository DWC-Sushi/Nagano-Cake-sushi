<div class = "container">
<div class = "row">
  <div class="col-xs-12">
    <h2 class= "head-line text-center">配送先登録/一覧</h2>
    <div class= "error" >

    </div>
    <%= form_with model:@address_new,local: true do |f| %>
      <div class="addres col-xs-8">
        <div class="form-group col-xs-12">
          <%=f.label :"郵便番号（ハイフンなし）",class: "col-xs-3 control-label" %>
          <%=f.text_field :postal_code, class: "col-xs-4 form-control-static postal_code" %>
        </div>

        <div class="form-group col-xs-12">
          <%=f.label :"住所" ,class: "col-xs-3 control-label" %>
          <%=f.text_field :address, class: "col-xs-4 form-control-static address" %>
        </div>

        <div class="form-group col-xs-12">
          <%=f.label :"宛名",class: "col-xs-3 control-label" %>
          <%=f.text_field :name, class: "col-xs-4 form-control-static name" %>
        <%= f.submit '登録' ,class: "col-xs pull-right btn-lg btn-success" %>
      </div>
      <% end %>
  </div>


    <table class='table table-hover table-inverse'>
      <thead>
        <tr>
          <th>郵便番号</th>
          <th>住所</th>
          <th>宛名</th>
          <th colspan="3"></th>
          </tr>
      </thead>
    <tbody>
      <% @addresses.each do |address| %>
        <tr>
          <td><%= address.postal_code %></td>
          <td><%= address.address %></td>
          <td><%= address.name %></td>
          <td><% link_to "編集する",edit_address_path(@address), class: "btn btn-sm btn-danger" %></td>
          <td><% link_to "削除する",address_path(@address),method: :delete, data: { confirm: '本当に消しますか？' }, class: "btn btn-sm btn-danger"%></td>
        </tr>

    </tbody>
    </table>
  <% end %>
</div>
</div>