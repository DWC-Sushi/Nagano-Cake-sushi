<div class="container">
<div class = "row">
  <div class="col-12">
    <h2 class= "head-line">配送先編集</h2>
    <div class= "error" >

    </div>
    <%= form_with model: @address , url: address_path,method: :patch do |f| %>
      <div class="addres col-12 mt-5">
        <div class="form-group col-12" >
          <%=f.label :"郵便番号（ハイフンなし）",class: "col-3 control-label" %>
          <%=f.text_field :postal_code, class: "col-4 form-control-static postal_code" %>
        </div>

        <div class="form-group col-12">
          <%=f.label :"住所" ,class: "col-3 control-label" %>
          <%=f.text_field :address, class: "col-7 form-control-static address" %>
        </div>

        <div class="form-group col-12">
          <%=f.label :"宛名",class: "col-3 control-label" %>
          <%=f.text_field :name, class: "col-3 form-control-static name" %>
          <%= f.submit '変更内容を保存' ,class: "offset-3 col-2 btn-lg btn-success" %>
        </div>
      </div>
    <% end %>

  </div>
  </div>
  </div>
