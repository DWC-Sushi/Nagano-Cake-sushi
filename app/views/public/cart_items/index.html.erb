<div>
  <div>
    <h4>ショッピングカート</h4>
    <div>
      <%= link_to "カートを空にする", public_destroy_all_cart_items_path, method: :delete,class: "btn btn-danger btn-sm" %>
    </div>
  </div>

  <div>
    <table>
      <thead>
        <tr>
          <th>商品名</th>
          <th>単価(税込)</th>
          <th>数量</th>
          <th>小計</th>
          <th></th>
        </tr>
      </thead>
        <% total = 0 %>
      <% if current_customer.cart_items.present? %>

      <tbody>
      <% @cart_items.each do |cart_item| %>
        <tr>
          <td>
            <%= image_tag cart_item.item.image, size: '80x60' %>
            <%= cart_item.item.name %>
          </td>
          <td><%= (cart_item.item.price*1.10).to_i %></td>
          <td>
            <%= form_with model: cart_item, url: public_cart_item_path(cart_item), local: true, method: :patch do |f| %>
              <%= f.number_field :amount, min: 1, max:10, id: "amount_cart"%>
              <%= f.submit "変更",class: "btn btn-success" %>
            <% end %>
          </td>
          <td>
            <% subtotal = ((cart_item.item.price*cart_item.amount)*1.10).to_i %>
            <%= subtotal %>
          </td>
          <td>
            <%= link_to "削除する", public_cart_item_path(cart_item.id, cart_item), method: :delete,class: "btn btn-danger" %>
          </td>
        </tr>
          <% total += subtotal %>
      <% end %>
      </tbody>
    <% end %>
    </table>

    <div>
    <div>
      <%= link_to "買い物を続ける", public_root_path,class: "btn btn-primary" %>
    </div>
    <div>
      <table>
        <thead>
          <tr>
            <th>合計金額</th>
            <td><%= total %></td>
          </tr>
        </thead>
      </table>
    </div>
    </div>
  </div>

  <div>
    <% if @cart_items.present? %>
      <%= link_to "情報入力に進む", public_new_order_path ,class: "btn btn-success" %>
    <% end %>
  </div>
</div>