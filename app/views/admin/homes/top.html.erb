<div class='container px-5 px-sm-0'>
  <div class='row' style="margin-top:25px;">
    <div class="col-sm-8 px-sm-0 offset-sm-1">
      <h4>注文履歴一覧</h4>
    </div>
    <div class="col-sm-10 px-sm-0 mx-auto mb-5">
    <table class='table table-hover'>
        <thead class="table-active">
          <tr>
            <th>購入日時</th>
            <th>購入者</th>
            <th>注文個数</th>
            <th>注文ステータス</th>
          </tr>
        </thead>
        <tbody>
          <% @orders.each do |order| %>
          <tr>
            <td>
              <%= link_to  admin_order_path(order.id), class: "text-dark font-weight-bold" do %>
                <%=  l order.created_at %>
              <% end %>
            </td>
            <td><%= order.customer.last_name+order.customer.first_name %></td>
            <td><%= order.order_details.sum(:amount) %></td>
            <td><%= order.status_i18n %></td>
          </tr>
          <% end %>
        </tbody>
    </table>
    <div class="mx-auto font-weight-bold" style="width:200px;">
      <%= paginate @orders %>
    </div>
    </div>
  </div>
</div>