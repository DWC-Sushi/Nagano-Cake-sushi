<div class='container px-5 px-sm-0'>
  <div class='row'>
    <h4>注文履歴一覧</h4>
    <table class='table'>
        <thead>
          <tr>
            <th>購入日時</th>
            <th>購入者</th>
            <th>注文個数</th>
            <th>注文ステータス</th>
          </tr>
        </thead>
        <tbody>
          <% @orders.each do |order| %>
          <tr>
            <td><%= link_to l order.created_at, admin_order_detail_path %></td>
            <td><%= order.name %></td>
            <td><%= order.注文個数 %></td>
            <td><%= order.status %></td>
          </tr>
          <% end %>
        </tbody>
    </table>
  </div>
</div>