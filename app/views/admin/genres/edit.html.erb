<!-- ジャンル編集ページ WF7ページ目 -->

<div class="container px-5 px-sm-0">
  <div class="row" style="margin-top:25px; margin-bottom:200px;">
    <div class="col-sm-8 px-sm-0 offset-sm-1">
      <h4>ジャンル編集</h4>
      <%= form_with model: @genre, url: admin_genre_path, class: "genre_edit_form", local:true do |f| %>
        <table class ="table table-borderless">
          <th><%= f.label :ジャンル名 %></th>
          <th><%= f.text_field :name, class: "genre-edit-field" %></th>
          <th><%= f.submit "変更を保存する", class: "btn btn-success" %></th>
        </table>
      <% end %>
    </div>
  </div>
</div>
