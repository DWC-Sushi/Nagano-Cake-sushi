<div class='container px-5 px-sm-0'>
  <div class='row' style="margin-top:25px;">
    <div class="col-sm-10 px-sm-0 mx-auto mb-5">
    <h4><%= @customer.last_name %><%= @customer.first_name %>さんの会員詳細</h4>
    <table class='table'>
      <tbody>
        <tr>
          <th>会員ID</th>
          <th><%= @customer.id %></th>
        </tr>
        <tr>
          <th>氏名</th>
          <th><%= @customer.last_name %>  <%= @customer.first_name %></th>
        </tr>
        <tr>
          <th>フリガナ</th>
          <th><%= @customer.last_name_kana %>  <%= @customer.first_name_kana %></th>
        </tr>
        <tr>
          <th>郵便番号</th>
          <th><%= @customer.postal_code %></th>
        </tr>
        <tr>
          <th>住所</th>
          <th><%= @customer.address %></th>
        </tr>
        <tr>
          <th>電話番号</th>
          <th><%= @customer.telephone_number %></th>
        </tr>
        <tr>
          <th>メールアドレス</th>
          <th><%= @customer.email %></th>
        </tr>
        <tr>
          <th>会員ステータス</th>
          <th>
            <% if @customer.is_deleted == false %>
              <p class="text-success font-weight-bold">有効</p>
            <% else %>
              <p class="text-gray font-weight-bold">退会</p>
            <% end %>
          </th>
        </tr>
        <tr>
          <th></th>
          <th>
            <%= link_to "編集する", edit_admin_customer_path(@customer.id), class: 'btn btn-success' %>         
            <%= link_to "注文履歴一覧を見る", admin_path, class: 'btn btn-info' %>
          </th>
        </tr>
      </tbody>
    </table>
    </div>
  </div>
</div>
