<div class='container px-5 px-sm-0'>
  <div class='row'>
    <h4>会員一覧</h4>
    <table class='table'>
        <thead>
          <tr>
            <th>会員ID</th>
            <th>氏名</th>
            <th>メールアドレス</th>
            <th>会員ステータス</th>
          </tr>
        </thead>
        <tbody>
          <% @customers.each do |customer| %>
          <tr>
            <td><%= customer.id %></td>
            <td><%= link_to customer.last_name, admin_customer_path(customer) %></td>
            <td><%= customer.email %></td>
            <% if customer.is_deleted == false %>
              <td class="text-success font-weight-bold">有効</td>
            <% else %>
              <td class="text-gray font-weight-bold">退会</td>
            <% end %>
          </tr>
          <% end %>
        </tbody>
    </table>