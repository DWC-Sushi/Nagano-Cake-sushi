<div class='container px-5 px-sm-0'>

  <div class='row'>
    <h4>注文履歴詳細</h4>
    <table class='table'>
      <tbody>
        <tr>
          <th>購入者</th>
          <th><%= link_to @order.customer.last_name + @order.customer.first_name, admin_customer_path %></th>
        </tr>
        <tr>
          <th>注文日</th>
          <th><%= l @order.created_at, format: :short %></th>
        </tr>
        <tr>
          <th>配送先</th>
          <th><%= @order.postal_code %>  <%= @order.address %></br><%= @order.name %></th>
        </tr>
        <tr>
          <th>支払い方法</th>
          <th><%= @order.payment_method_i18n %></th>
        </tr>
        <tr>
          <th>注文ステータス</th>
          <th>
          <% if @order.status == 1 %>
            <%= form.select :making_status == 1, class: "production_status-select" %>
          <% else %>
            <%= form_with model: @order, url: admin_order_path, method: :patch, local: true do |f| %>
              <%= f.select :status, Order.statuses_i18n.invert.keys, class: "status" %>
              <%= f.submit "更新" , class: 'btn btn-info' %>
            <% end %>
          <% end %>
          </th>
        </tr>
      </tbody>
    </table>
  </div>

  <div class='row'>
    <div class='col-8'>
      <table class='table'>
        <thead>
          <tr>
            <th>商品名</th>
            <th>単価（税込）</th>
            <th>数量</th>
            <th>小計</th>
            <th>製作ステータス</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @order_details.each do |order_detail| %>
          <tr>
            <td><%= order_detail.item.name %></td>
            <td><%= order_detail.item.taxin_price %></td>
            <td><%= order_detail.amount %></td>
            <td><%= order_detail.item.taxin_price * order_detail.amount %></td>
            <td>
              <%= form_with model: order_detail , url: admin_order_detail_path(order_detail.id) , method: :patch , local: true do |f| %>
                <%= f.select :making_status, OrderDetail.making_statuses_i18n.invert %>
                <%= f.submit "更新", class: "btn btn-success" %>
              <% end %>
            </td>
          </tr>
        </tbody>
      </table>
    </div>
    <div class='col-4'>
      <ul>
        <% @sum = 0 %>
        <% @sum += order_detail.item.taxin_price * order_detail.amount %>
        <li>商品合計  <%= @sum %>円</li>
        <li>送料  800円</li>
        <li>請求金額合計  <%= @sum + 800 %>円</li>
      </ul>
      <% end %>
    </div>
  </div>
</div>